<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.spring.SpringbootRecord.card.model.DAO.CardDAO">
    <!-- 전체카드조회 -->
    <select id="selectCardList" resultType="com.spring.SpringbootRecord.card.model.DTO.CardDTO">
        SELECT *
        FROM card
    </select>
    
    <!-- 카드번호(cardNumber)로 카드상세정보 조회 -->
    <select id="selectCardDetailByCardNumber" resultType="com.spring.SpringbootRecord.card.model.DTO.CardDTO">
        SELECT *
        FROM CARD
        WHERE cardNumber = #{cardNumber}
    </select>
    
</mapper>